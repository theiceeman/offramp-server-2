{
  "name": "crypto-offramp-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "dev:hard": " node ace migration:refresh --force;node ace db:seed;node ace serve --watch;",
    "build": "node ace build --production --ignore-ts-errors",
    "test": "node ace test",
    "start:prod": "node build/server.js",
    "build:prod": "npm install &&  npm run build && cp .env build/  &&  node build/ace migration:run --force && node build/ace db:seed",
    "pm2:prod": "cp .env ./build & pm2 start npm --name 'offramp-server' -- run start:prod && pm2 logs offramp-server",
    "pm2:dev": "cp .env ./build & pm2 start npm --name 'offramp-server-dev' -- run start:prod && pm2 logs offramp-server-dev"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@types/proxy-addr": "^2.0.3",
    "@types/source-map-support": "^0.5.10",
    "adonis-preset-ts": "^2.1.0",
    "pino-pretty": "^10.3.1",
    "typescript": "~4.6",
    "youch": "^3.3.3",
    "youch-terminal": "^2.2.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.4.0",
    "@adonisjs/repl": "^3.1.11",
    "abi-decoder": "^2.4.0",
    "axios": "^1.6.7",
    "ethers": "^5.4.7",
    "flutterwave-node-v3": "^1.1.10",
    "luxon": "^3.4.4",
    "pg": "^8.11.3",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.7.5",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.1",
    "web3": "^1.8.2",
    "web3-providers-ws": "^4.0.7",
    "ws": "^8.16.0"
  }
}
